<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
 
	
	
 
 
     <var name="cart" class="com.niit.GroceryBackendApp.Cart" />
 
 <view-state id="start" view="details.jsp">
        <transition on="addToCart" to="cartInfo" />
        
    </view-state><!--  -->
  <action-state id="addCartToOrder">
        <transition on="addToCart" to="cartInfo"/>
    </action-state>
  
 
 
 <view-state id="cartInfo" view="cart.jsp" model="cart">
        <transition on="cShopping" to="toContinueShop"/>
        <transition on="checkout" to="toCheckout" />
        
    </view-state>
 
 <view-state id="toContinueShop" view="checkout.jsp"  model="cart">
 <transition on="proceed" to="toproceed"></transition>
 <transition on="notProceed" to="cancelCheckout"></transition>
 <transition  on=""></transition>
 </view-state>
 
 
 <view-state id="toproceed" view="invoice.jsp">
  <transition on="invoice" to="acknowledgement"/>
</view-state>
 
 <view-state id="acknowledgement" view="acknowledgement.jsp">
 <transition to="endstate" />
 </view-state>
 <end-state id="endstate"/>
<end-state id="cancelCheckout" view="index.jsp" />
  
 
	
</flow>